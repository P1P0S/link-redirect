<!DOCTYPE html>
<html lang="en">
  <head>
    <title>All links</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>

    <h1>Links</h1>
    <a href="/add">Add Links</a>
    <% for(let i=0; i < links.length; i++){ %>
    <div id="<%= links[i]._id%>">
      <form  method="POST" action="/?_method=DELETE">
        <h2><a href="<%= links[i]._id%>" target="_blank"><%= links[i].title%></a></h2>
        <div>
          <%= links[i].description%>
        </div>
        <div>
          <%= links[i].url%>
        </div>
        <div>
          clicks: <%= links[i].clicks%>
        </div>
        <input name="id" value="<%= links[i]._id%>" hidden>
        <button type="submit">Delete</button>
        <a href="/edit/<%= links[i]._id %>">Edit</a>
      </form>
    </div>
    <% } %>

  </body>
</html>
